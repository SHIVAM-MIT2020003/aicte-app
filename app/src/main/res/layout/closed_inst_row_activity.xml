<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="wrap_content">

    <View
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignTop="@+id/closedAicteId"
        android:background="#FFFFFF">
    </View>

    <TextView
        android:id="@+id/closedAicteId"
        android:layout_marginLeft="5dp"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:layout_width="120dp"
        android:gravity="center"
        android:textSize="12dp"
        android:layout_height="75dp"
        android:text="AICTE id"
        android:textColor="#ffffff"
        />

    <TextView
        android:id = "@+id/closedInstituteName"
        android:gravity="center"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:textSize="12dp"
        android:layout_marginLeft="5dp"
        android:text="Institute Name"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@+id/closedAicteId"/>

    <TextView
        android:id = "@+id/closedInstituteType"
        android:gravity="center"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:textSize="12dp"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_marginLeft="5dp"
        android:text="Institute Type"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@+id/closedInstituteName"/>

    <TextView
        android:id = "@+id/closedInstituteAddress"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:layout_width="120dp"
        android:textSize="12dp"
        android:layout_height="75dp"
        android:text="Address"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@+id/closedInstituteType" />

    <TextView
        android:id ="@+id/closedState"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:text="State"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@+id/closedInstituteAddress" />

    <TextView
        android:id = "@+id/closedInstDistrict"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"
        android:text="District"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@+id/closedState" />

    <TextView
        android:id = "@+id/closedInstCity"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:textSize="12dp"
        android:layout_marginLeft="5dp"
        android:text="City"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_toRightOf="@+id/closedInstDistrict" />

</RelativeLayout>