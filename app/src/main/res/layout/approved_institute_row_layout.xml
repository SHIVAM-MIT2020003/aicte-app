<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/approvedAicteID"
        android:layout_marginLeft="5dp"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:layout_width="120dp"
        android:gravity="center"
        android:textSize="12dp"
        android:layout_height="75dp"
        android:text="AICTE Id"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/approvedName"
        android:layout_toRightOf="@+id/approvedAicteID"
        android:gravity="center"
        android:scrollHorizontally="false"
        android:textSize="12dp"
        android:inputType="textMultiLine"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_marginLeft="5dp"
        android:text="Name"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/approvedAddress"
        android:gravity="center"
        android:scrollHorizontally="false"
        android:layout_toRightOf="@+id/approvedName"
        android:inputType="textMultiLine"
        android:textSize="12dp"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_marginLeft="5dp"
        android:text="Address"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/approvedDistrict"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:layout_toRightOf="@+id/approvedAddress"
        android:textSize="12dp"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:text="District"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/approvedInstType"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:textSize="12dp"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/approvedDistrict"
        android:layout_marginLeft="5dp"
        android:text="Institution Type"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/approvedWomen"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:layout_width="120dp"
        android:layout_toRightOf="@+id/approvedInstType"
        android:layout_height="75dp"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:text="Women"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/approvedMinority"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:layout_toRightOf="@+id/approvedWomen"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"
        android:text="Minority"
        android:textColor="#FFFFFF"
        android:gravity="center"/>

</RelativeLayout>